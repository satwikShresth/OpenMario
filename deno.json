{
  "workspace": ["./apps/back/", "./apps/front-new"],
  "fmt": {
    "useTabs": false,
    "indentWidth": 3,
    "semiColons": true,
    "singleQuote": true,
    "lineWidth": 100,
    "proseWrap": "preserve",
    "exclude": ["./apps/front-new/src/routeTree.gen.ts","./apps/front-new/.vite/*","./apps/back/email_templates/*"]
    "include": ["./apps/back/","./apps/front-new"]
  },
  "lint": {
    "rules": {
      "exclude": ["no-sloppy-imports"]
    }
  },
  "tasks": {
    "dev": {
      "dependencies": ["server:dev", "client:dev"]
    },
    "server:dev": "deno task -f '@openmario/back' dev:watch"
    "client:dev": "deno task -f '@openmario/front' dev"
  },
  "unstable": ["sloppy-imports"],
  "nodeModulesDir": "auto"
}
