{
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "out",
    "skipLibCheck": true,
    // enable top-level await and import/export syntax
    "target": "es2017",
    "moduleResolution": "node16",
    "module": "es2022",

    // enable type checking
    "strict": true,

    // to make jest happy
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "#d/*": ["src/*"], // Enable absolute imports for src/
      "#db/*": ["src/db/*"], // Enable absolute imports for src/
      "#db": ["src/db/index.ts"], // Enable absolute imports for src/
      "#utils/*": ["src/utils/*"], // Enable absolute imports for src/
      "#routes": ["src/routes/index.ts"] // Enable absolute imports for src/
    },
  },
  "exclude": ["node_modules", "out"]
}
