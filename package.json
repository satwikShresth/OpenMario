{
   "name": "@openmario",
   "description": "Openmario monorepo",
   "version": "1.0.0",
   "repository": {
      "type": "git",
      "url": "git+ssh://git@github.com/MagadhTech/MDS-Banking.git"
   },
   "bugs": {
      "url": "https://github.com/MagadhTech/MDS-Banking/issues"
   },
   "workspaces": ["apps/*", "packages/*", "crons/*"],
   "packageManager": "bun@1.3.1",
   "private": "true",
   "scripts": {
      "dev": "bun run --env-file=.env turbo run dev",
      "build": "bun run --env-file=.env turbo run build",
      "kill": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true; lsof -ti:4000 | xargs kill -9 2>/dev/null || true; lsof -ti:5173 | xargs kill -9 2>/dev/null || true; lsof -ti:8080 | xargs kill -9 2>/dev/null || true",
      "clean": "rm bun.lock && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
      "test": "turbo run test",
      "lint": "turbo run lint",
      "fmt": "bunx biome format --write .",
      "format": "bunx biome format --write .",
      "type-check": "turbo run type-check"
   },
   "devDependencies": {
      "@types/bun": "^1.3.5",
      "@biomejs/biome": "2.3.10",
      "typescript": "^5.9.3",
      "turbo": "^2.7.2"
   },
   "dependencies": {
      "@dotenvx/dotenvx": "^1.52.0"
   }
}
