{
  "scripts": {
    "setup": "rm -f database.db && npm run db:migrate:push",
    "build": "rm -rf out && mkdir out && tsc",
    "start": "cd out && node server.js",
    "watch": "npm run build && tsc-watch --onSuccess \"npm run start\"",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand --rootDir=src",
    "db:migrate": "npx drizzle-kit migrate",
    "db:migrate:generate": "npx drizzle-kit generate --name ",
    "db:migrate:push": "npx drizzle-kit push --force",
    "db:seed": "node ./out/db/seed/index.js"
  },
  "type": "module",
  "imports": {
    "#/*": "./out/*",
    "#routes": "./out/routes/index.js",
    "#utils/*": "./out/utils/*",
    "#db/*": "./out/db/*",
    "#db": "./out/db/index.js"
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "better-sqlite3": "^11.7.2",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.3",
    "drizzle-zod": "^0.6.1",
    "express": "^5.0.1",
    "morgan": "^1.10.0",
    "supertest": "^7.0.0",
    "vitest": "^2.1.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^18.11.18",
    "@types/supertest": "^6.0.2",
    "axios": "^1.2.2",
    "drizzle-kit": "^0.30.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.9.4"
  }
}
