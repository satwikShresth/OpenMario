{
   "name": "@openmario",
   "description": "Openmario monorepo",
   "version": "1.0.0",
   "repository": {
      "type": "git",
      "url": "git+ssh://git@github.com/MagadhTech/MDS-Banking.git"
   },
   "bugs": {
      "url": "https://github.com/MagadhTech/MDS-Banking/issues"
   },
   "workspaces": ["apps/*", "packages/*", "crons/*"],
   "packageManager": "bun@1.3.1",
   "private": "true",
   "scripts": {
      "dev": "bun run --env-file=.env turbo run dev",
      "build": "bun run --env-file=.env turbo run build",
      "script:add_admin": "bun run --env-file=.env ./scripts/createAdmin.ts",
      "test": "turbo run test",
      "lint": "turbo run lint",
      "fmt": "bunx biome format --write .",
      "format": "bunx biome format --write .",
      "type-check": "turbo run type-check",
      "clean": "turbo run clean"
   },
   "devDependencies": {
      "@types/bun": "^1.3.2",
      "@biomejs/biome": "2.3.2",
      "typescript": "^5.9.3",
      "turbo": "^2.6.0"
   }
}
