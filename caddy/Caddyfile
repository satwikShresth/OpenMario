{
    # Global options
    admin off
}

:80 {

    handle /favicon.ico {
        file_server {
            root /usr/share/caddy
        }
    }

    handle_path /* {
       root * /usr/share/caddy
       try_files {path} /index.html
       file_server

    }

    # Handle API requests
    handle_path /search/* {
        uri strip_prefix /search
        reverse_proxy meilisearch:7700 {
            header_up Host {host}
            header_up X-Real-IP {remote}
        }
    }

    # Handle API requests
    handle_path /api/* {
        uri strip_prefix /api
        reverse_proxy backend:3000 {
            header_up Host {host}
            header_up X-Real-IP {remote}
        }
    }

    # Logging
    log {
        output stdout
        format console
    }
}
