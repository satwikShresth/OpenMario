{
  "compilerOptions": {
    "noFallthroughCasesInSwitch":true
  },
  "imports": {
    "@asteasolutions/zod-to-openapi": "npm:@asteasolutions/zod-to-openapi@^7.3.0",
    "@electric-sql/pglite": "npm:@electric-sql/pglite@^0.2.15",
    "@libsql/client": "npm:@libsql/client@^0.14.0",
    "@sendgrid/mail": "npm:@sendgrid/mail@^8.1.4",
    "@std/expect": "jsr:@std/expect@^1.0.11",
    "@std/testing": "jsr:@std/testing@^1.0.9",
    "@std/yaml": "jsr:@std/yaml@^1.0.5",
    "@types/express": "npm:@types/express@^5.0.0",
    "@types/jest": "npm:@types/jest@^29.5.14",
    "argon2": "npm:argon2@^0.41.1",
    "axios": "npm:axios@^1.7.9",
    "drizzle-kit": "npm:drizzle-kit@^0.30.1",
    "drizzle-orm": "npm:drizzle-orm@^0.38.3",
    "drizzle-zod": "npm:drizzle-zod@^0.6.1",
    "express": "npm:express@5.0.0",
    "express-jsdoc-swagger": "npm:express-jsdoc-swagger@^1.8.0",
    "express-jwt": "npm:express-jwt@^8.5.1",
    "express-rate-limit": "npm:express-rate-limit@^7.5.0",
    "helmet": "npm:helmet@^8.0.0",
    "jsonwebtoken": "npm:jsonwebtoken@^9.0.2",
    "jwt-express": "npm:jwt-express@^1.1.0",
    "morgan": "npm:morgan@^1.10.0",
    "node-persist": "npm:node-persist@^4.0.4",
    "pg": "npm:pg@^8.13.3",
    "swagger-ui-express": "npm:swagger-ui-express@^5.0.1",
    "zod": "npm:zod@^3.24.1",
    "html": "https://deno.land/x/html/mod.ts",
    "#/": "./src/",
    "#email/": "./email_templates/build/",
    "#db": "./src/db/index.ts",
    "#utils": "./src/utils/index.ts",
    "#models": "./src/models/index.ts",
    "#routes": "./src/routes/index.ts",
  },
  "fmt": {
    "useTabs": false,
    "indentWidth": 3,
    "semiColons": true,
    "singleQuote": true,
    "lineWidth": 150,
    "proseWrap": "preserve",
    "include": ["./src/", "./openapi/","./tests/", "*.ts"],
    "exclude": ["src/static"]
  },
  "tasks": {
    "db:migrate": "deno run --env-file=../.env -A npm:drizzle-kit migrate",
    "db:migrate:generate": "deno run --env-file=../.env -A npm:drizzle-kit generate --name ",
    "db:migrate:generate:custom": "deno run --env-file=../.env -A npm:drizzle-kit generate --custom --name=",
    "db:migrate:push": "deno run -A npm:drizzle-kit up --force",
    "start": "deno run -A src/server.ts",
    "dev:db:migrate:push": "deno run --env-file=../.env -A npm:drizzle-kit migrate",
    "dev:seed": "deno run --env-file=../.env -A ./database/seeds/seed.ts",
    "build": "deno check src",
    "watch": "deno -A --env-file=../.env --watch src/server.ts",
    "dev": {
      "dependencies": ["dev:db:migrate:push", "dev:seed","watch"]
    },
    "test": "deno test -A --env-file=../.env",
    "gen:openapi": "deno -A ./openapi/index.ts ../openapi.json",
    "db:seed": "deno run -A ./database/seeds/seed.ts",
    "db:studio": "deno run --env-file=../.env -A npm:drizzle-kit studio",
    "format": "deno fmt --watch src"
  },
  "nodeModulesDir": "auto"
}
