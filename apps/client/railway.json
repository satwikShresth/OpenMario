{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "bun install && bunx turbo run build --filter=@openmario/client",
    "watchPatterns": ["apps/client/**", "packages/**", "package.json", "bun.lock"],
    "nixpacksPlan": {
      "providers": ["bun"],
      "phases": {
        "setup": {
          "nixPkgs": ["bun", "caddy"]
        },
        "install": {
          "cmds": ["bun install"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "caddy run --config apps/client/Caddyfile --adapter caddyfile",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE"
  }
}
