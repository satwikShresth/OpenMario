# Build stage
FROM denoland/deno:alpine AS builder-stage
WORKDIR /app
COPY ./apps/back/ ./
ENV DENO_DIR=/.deno_cache
RUN deno compile --no-check -A -o openmario src/server.ts  \
    && chmod +x openmario


FROM denoland/deno:alpine
WORKDIR /app
COPY --from=builder-stage /app/openmario /app
EXPOSE 3000
CMD ["./openmario"]

